<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_dialog_pic"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_dominant_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_1"
            style="@style/style_SquareView" />

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_2"
            style="@style/style_SquareView" />

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_3"
            style="@style/style_SquareView" />

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_4"
            style="@style/style_SquareView" />

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_5"
            style="@style/style_SquareView" />

        <com.neuandroid.departify.SquareView
            android:id="@+id/iv_palette_6"
            style="@style/style_SquareView"/>

    </LinearLayout>
</LinearLayout>